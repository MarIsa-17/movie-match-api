generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/client"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NUEVO: Enum con géneros válidos
enum Genre {
  ACTION
  COMEDY
  DRAMA
  HORROR
  SCIFI
  THRILLER
}

model Movie {
  id        Int      @id @default(autoincrement())
  title     String
  year      Int
  genre     Genre
  director  String
  rating    Float
  poster    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
